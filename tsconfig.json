{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "declaration": true,

    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["vitest/globals"],
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist"
  },
  "include": [
    "src"
  ]
}
